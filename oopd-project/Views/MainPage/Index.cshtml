@model HomePage

<style>
    .static-gym-image {
        object-fit: cover;
        width: 300px;
        height: 250px;
        margin-right: 10px;
    }
</style>

<div class="container-fluid vh-100 mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Description of Our Gym</h2>
          <p class="text-right">
                         Welcome to our state-of-the-art gym! At FitnessHub, we are dedicated to providing you with a top-notch fitness experience. Our gym is equipped with cutting-edge facilities and staffed by experienced trainers to help you achieve your fitness goals.
                     </p>
                     <p class="text-right">
                         Our spacious workout area is designed to accommodate a variety of training styles, from cardio workouts to strength training. We take pride in creating a motivating and inclusive environment where fitness enthusiasts of all levels can thrive.
                     </p>
                     <p class="text-right">
                         Whether you're a beginner looking to kickstart your fitness journey or an experienced athlete aiming to reach new heights, FitnessHub is the place for you. Explore our diverse range of fitness classes, state-of-the-art equipment, and personalized training programs tailored to meet your specific needs.
                     </p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h2>Our Gym Facilities</h2>
            <div class="static-gym-images">
                <img src="@WebConstants.GymImage1URL" alt="Gym Image 1" class="static-gym-image" width="300" height="250">
                <img src="@WebConstants.GymImage2URL" alt="Gym Image 2" class="static-gym-image" width="300" height="250">
                <img src="@WebConstants.GymImage3URL" alt="Gym Image 3" class="static-gym-image" width="300" height="250">
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <h2 class="text-center">Our Coaches</h2>
            <div id="trainersCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Coaches.Count; i += 4)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="row">
                                @for (int j = i; j < i + 4 && j < Model.Coaches.Count; j++)
                                {
                                    <div class="col-md-3">
                                        <img src="@WebConstants.UnknownPersonURL" alt="Coach Image" class="img-fluid" width="100" height="70">
                                        <h3>@Model.Coaches[j].FullName</h3>
                                        <p>@Model.Coaches[j].Specialization</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#trainersCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#trainersCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mt-3 mb-3">
            <h2 class="text-center">Subscriptions</h2>
            <ul class="list-group">
                @foreach (var subscription in Model.Subscriptions)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@subscription.Subscription_Type_Name: @subscription.Price</span>
                    </li>
                }
            </ul>
            <button type="button" class="btn btn-primary btn-lg btn-block mt-3">Buy Subscription</button>
        </div>
    </div>
    <div></div>

</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        $('#trainersCarousel').carousel();
    });
</script>
