@model Coach

@{
    ViewData["Title"] = "Main Page";
}


<h2>Your Classes</h2>

<table id="classesTable">
    <thead>
        <tr>
            <th>Class name</th>
            <th>Max participants</th>
            <th>Day</th>
            <th>Time</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
        var trainerClasses = @Html.Raw(Json.Serialize(Model.MyClasses));

        function populateClassesTable() {
            var tableBody = document.querySelector('#classesTable tbody');

            tableBody.innerHTML = '';

            trainerClasses.forEach(function (classInfo) {
                var row = document.createElement('tr');
                row.innerHTML = '<td>' + classInfo.className + '</td>' +
                    '<td>' + classInfo.maxParticipants + '</td>' +
                    '<td>' + classInfo.day + '</td>' +
                    '<td>' + classInfo.time + '</td>' +
                    '<td>' + classInfo.duration + '</td>';
                tableBody.appendChild(row);
            });
        }

        window.onload = populateClassesTable;
</script>
